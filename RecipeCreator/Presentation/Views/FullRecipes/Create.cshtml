@model Domain.Models.FullRecipe

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">FullRecipe</h2>
<hr />
<div class="col">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group  mt-10 row">
                <div class="col-2">
                    <label asp-for="Title"> Recipe Title:</label>
                </div>

                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Title" placeholder="example: Roasted Potatoes" required>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-5 row">
                <div class="col-2">
                    <label asp-for="Instruction">Recipe Steps:</label>
                </div>
                <div class="col-10">
                    <textarea class="form-control" asp-for="Instruction" rows="10" required></textarea>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary" mt-2>Add Recipe</button>
            </div>

        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
